package com.callor.arrays.exec;

public class ExecV2 {
	
	public static void main(String[] args) {
		
		int[] aNum = new int[100];
		int index = 0;
		
		aNum[index ++] = (int)(Math.random() * 100) + 1;
		
		boolean searchNum = false;
		searchNum = (aNum[index] % 2) == 0;
		
		for(index = 0 ; index < 100 ; index ++) {
			if(searchNum) {
				System.out.println(aNum[index] + " 는 짝수");
			} else {
				System.out.println(aNum[index] + " 는 홀수");
			}
		}
		
	}

}
